<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
       <%= link_to user.name, user %>
       <% if current_user.admin? %>
       <%= link_to 'Destroy', user, method: :delete,
                                        data: { confirm: 'Are you sure?' } %>
       <% end %>
    </li>
  <% end %>
</ul>
