<!DOCTYPE html>
<html>
  <head>
    <title>Foodtracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'bootstrap' %>
  </head>

  <body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
<div class="container d-flex h-60">
    <div class="row justify-content-center align-self-center">
  <a class="navbar-brand" href="/">Foodtracker</a>
      <ul class="navbar-nav mr-auto">
  <% if current_user %>
      <li class="nav-item">
        <a class="nav-link" href="ingestions">Ingestions</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="stats">Statistics</a>
      </li>
     </ul>
     </div>
    <div class="row justify-content-right align-self-right">
    <%= link_to "Logged in as #{current_user.email}", profile_path, class: "btn btn-link" %>
    <%= link_to "Log Out", logout_path, class: "btn btn-secondary" %>
  <% else %>
    </ul>
         </div>
    <div class="row justify-content-right align-self-right">
    <%= link_to "Sign Up", signup_path, class: "btn btn-secondary" %> or 
    <%= link_to "Log In", login_path, class: "btn btn-primary" %>
  <% end %>
  </div>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
